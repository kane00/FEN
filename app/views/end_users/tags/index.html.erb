

<div class="container">
	<h2>#<%= @tag %>　の商品一覧</h2>		<!-- @tagでtagで登録されている名前を表示できる -->
	<div class="row">
		<div class="col-xs-2">
			<%= render 'end_users/templetes/tag_list', tags: @tags %>
		</div>
		<div class="col-xs-10">
			<h2>現在登録されている商品の数</h2>
			<h4>全<%= @items.count %>件</h4>
			<%= render 'end_users/templetes/itemfind', items: @items %>

		</div>
	</div>
</div>