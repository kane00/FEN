<% if params[:q] != nil %>		<!-- :qのパラメータをもっているかいないか -->
	<% if items.count != 0 %>		<!-- :qのパラメータをもっている && 商品が1以上ある -->
		<div class="text-right" style="font-size: 12px; margin-top: 10px;">栄養素をクリックすると多い順、少ない順に並び替えることができます。</div>
		<div class="scroll-table">
			<div style="float: left"><%= paginate items %></div>
			<table>
				<thead>
					<tr>
						<th><%= sort_link(@q, :item_name, "商品名") %></th>
						<th>画像</th>
						<th><%= sort_link(@q, :nutrients_calorie, "エネルギー") %></th>
						<th><%= sort_link(@q, :nutrients_protein, "たんぱく質") %></th>
						<th><%= sort_link(@q, :nutrients_lipid, "脂質") %></th>
						<th><%= sort_link(@q, :nutrients_carbohydrate, "炭水化物") %></th>
						<th><%= sort_link(@q, :nutrients_salt, "塩分") %></th>
						<th><%= sort_link(@q, :nutrients_sodium, "ナトリウム") %></th>
						<th><%= sort_link(@q, :nutrients_potassium, "カリウム") %></th>
						<th><%= sort_link(@q, :nutrients_calcium, "カルシウム") %></th>
						<th><%= sort_link(@q, :nutrients_magnesium, "マグネシウム") %></th>
						<th><%= sort_link(@q, :nutrients_rin, "リン") %></th>
						<th><%= sort_link(@q, :nutrients_iron, "鉄") %></th>
						<th><%= sort_link(@q, :nutrients_zinc, "亜鉛") %></th>
						<th><%= sort_link(@q, :nutrients_copper, "銅") %></th>
						<th><%= sort_link(@q, :nutrients_manganese, "マンガン") %></th>
						<th><%= sort_link(@q, :nutrients_lodine, "ヨウ素") %></th>
						<th><%= sort_link(@q, :nutrients_selenium, "セレン") %></th>
						<th><%= sort_link(@q, :nutrients_chromium, "クロム") %></th>
						<th><%= sort_link(@q, :nutrients_molybdenum, "モリブデン") %></th>
						<th><%= sort_link(@q, :nutrients_vitamin_a, "ビタミンA") %></th>
						<th><%= sort_link(@q, :nutrients_β_carotene, "βカロテン") %></th>
						<th><%= sort_link(@q, :nutrients_vitamin_d, "ビタミンD") %></th>
						<th><%= sort_link(@q, :nutrients_vitamin_e, "ビタミンE") %></th>
						<th><%= sort_link(@q, :nutrients_vitamin_k, "ビタミンK") %></th>
						<th><%= sort_link(@q, :nutrients_vitamin_b1, "ビタミンB1") %></th>
						<th><%= sort_link(@q, :nutrients_vitamin_b2, "ビタミンB2") %></th>
						<th><%= sort_link(@q, :nutrients_niacin, "ナイアシン") %></th>
						<th><%= sort_link(@q, :nutrients_vitmain_b6, "ビタミンB6") %></th>
						<th><%= sort_link(@q, :nutrients_vitamin_b12, "ビタミンB12") %></th>
						<th><%= sort_link(@q, :nutrients_folic_acid, "葉酸") %></th>
						<th><%= sort_link(@q, :nutrients_pantothenic_acid, "パントテン酸") %></th>
						<th><%= sort_link(@q, :nutrients_biotin, "ビオチン") %></th>
						<th><%= sort_link(@q, :nutrients_vitamin_c, "ビタミンC") %></th>
						<th><%= sort_link(@q, :nutrients_saturated_fatty_acid, "飽和脂肪酸") %></th>
						<th><%= sort_link(@q, :nutrients_polyunsaturated_fatty_acid, "一価不飽和脂肪酸") %></th>
						<th><%= sort_link(@q, :nutrients_monounsaturated_fatty_acid, "多価不飽和脂肪酸") %></th>
						<th><%= sort_link(@q, :nutrients_cholesterol, "コレステロール") %></th>
						<th><%= sort_link(@q, :nutrients_soluble_dietary_fiber, "水溶性食物繊維") %></th>
						<th><%= sort_link(@q, :nutrients_insoluble_dietary_fiber, "不溶性食物繊維") %></th>
						<th><%= sort_link(@q, :nutrients_dietary_fiber, "食物繊維総量") %></th>
						<th></th>
					</tr>
				</thead>
				<% @items.each do |item| %>
				<tbody>
					<tr>
						<td><%= link_to item.item_name, end_users_item_path(item.id), data: {"turbolinks" => false}  %></td>
						<td>
							<%= link_to end_users_item_path(item.id), data: {"turbolinks" => false} do %>
								<%= attachment_image_tag(item, :image, :style => "height:50px; width:auto;", fallback: "noimage.png") %>
							<% end %>
						</td>
						<td><%= item.nutrients_calorie %></td>
						<td><%= item.nutrients_protein %></td>
						<td><%= item.nutrients_lipid %></td>
						<td><%= item.nutrients_carbohydrate %></td>
						<td><%= item.nutrients_salt %></td>
						<td><%= item.nutrients_sodium || 'ー' %></td>
						<td><%= item.nutrients_potassium || 'ー' %></td>
						<td><%= item.nutrients_calcium || 'ー' %></td>
						<td><%= item.nutrients_magnesium || 'ー' %></td>
						<td><%= item.nutrients_rin || 'ー' %></td>
						<td><%= item.nutrients_iron || 'ー' %></td>
						<td><%= item.nutrients_zinc || 'ー' %></td>
						<td><%= item.nutrients_copper || 'ー' %></td>
						<td><%= item.nutrients_manganese || 'ー' %></td>
						<td><%= item.nutrients_lodine || 'ー' %></td>
						<td><%= item.nutrients_selenium || 'ー' %></td>
						<td><%= item.nutrients_chromium || 'ー' %></td>
						<td><%= item.nutrients_molybdenum || 'ー' %></td>
						<td><%= item.nutrients_vitamin_a || 'ー' %></td>
						<td><%= item.nutrients_β_carotene || 'ー' %></td>
						<td><%= item.nutrients_vitamin_d || 'ー' %></td>
						<td><%= item.nutrients_vitamin_e || 'ー' %></td>
						<td><%= item.nutrients_vitamin_k || 'ー' %></td>
						<td><%= item.nutrients_vitamin_b1 || 'ー' %></td>
						<td><%= item.nutrients_vitamin_b2 || 'ー' %></td>
						<td><%= item.nutrients_niacin || 'ー' %></td>
						<td><%= item.nutrients_vitmain_b6 || 'ー' %></td>
						<td><%= item.nutrients_vitamin_b12 || 'ー' %></td>
						<td><%= item.nutrients_folic_acid || 'ー' %></td>
						<td><%= item.nutrients_pantothenic_acid || 'ー' %></td>
						<td><%= item.nutrients_biotin || 'ー' %></td>
						<td><%= item.nutrients_vitamin_c || 'ー' %></td>
						<td><%= item.nutrients_saturated_fatty_acid || 'ー' %></td>
						<td><%= item.nutrients_polyunsaturated_fatty_acid || 'ー' %></td>
						<td><%= item.nutrients_monounsaturated_fatty_acid || 'ー' %></td>
						<td><%= item.nutrients_cholesterol || 'ー' %></td>
						<td><%= item.nutrients_soluble_dietary_fiber || 'ー' %></td>
						<td><%= item.nutrients_insoluble_dietary_fiber || 'ー' %></td>
						<td><%= item.nutrients_dietary_fiber || 'ー' %></td>
					</tr>
				</tbody>
				<% end %>
			</table>
			<div style="float: right"><%= paginate items %></div>
		</div>
	<% else %>		<!-- :qのパラメータをもっている && 商品が0 -->
		商品が見つかりませんでした。
		<%= link_to "商品を登録", new_end_users_item_path, data: {"turbolinks" => false} %>
	<% end %>
<% else %>		<!-- :qのパラメータをもっていない -->
	<% if items.count != 0 %>		<!-- :qのパラメータをもっていない && 商品が1以上ある -->
		<div style="float: left"><%= paginate items %></div>
		<div class="index-table">
			<table>
				<% items.each do |item| %>
				    <tbody>
				        <tr>
				            <th rowspan="3" class="text-center">
				            	<%= link_to end_users_item_path(item.id), data: {"turbolinks" => false} do %>
									<%= attachment_image_tag(item, :image, :style => "height:100px; width:auto;", fallback: "noimage.png") %>
							<% end %></th>
				            <td style="padding-top: 10px; font-size: 15px;"><%= link_to item.item_name, end_users_item_path(item.id), data: {"turbolinks" => false}  %></td>
				        </tr>
				        <tr>
				            <td><%= render 'end_users/likes/like', item: item %></td>
				        </tr>
						<tr>
				            <td>更新日：<%= item.updated_at.strftime('%Y/%m/%d') %></td>
				        </tr>
				    </tbody>
				<% end %>
			</table>
		</div>
		<div><%= paginate items %></div>
	<% else %>		<!-- :qのパラメータをもっていない && 商品が0 -->
		商品が見つかりませんでした。
		<%= link_to "商品を登録", new_end_users_item_path, data: {"turbolinks" => false} %>
	<% end %>
<% end %>