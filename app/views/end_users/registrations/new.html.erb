<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "end_users/shared/error_messages", resource: resource %>


  <div class="field">
    <%= f.label :ユーザー名 %><br />
    <%= f.text_field :end_user_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :お住まいの地域 %><br />
    <!-- モデルに登録しenumでもってきている、モデル名.カラム名複数形.keysで設定したenumを呼び出す -->
    <%= f.select :area, EndUser.areas.keys, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <% f.hidden_field :user_status, :value => true %><br />
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "end_users/shared/links" %>
