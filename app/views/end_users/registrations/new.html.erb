<div class="container">
  <div class="row">
    <div class="content col-xs-9">
      新規登録
    </div>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="row">
      <div class="col-xs-8 col-xs-offset-2">
  <%= render "end_users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :ユーザー名 %><br />
    <%= f.text_field :end_user_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :お住まいの地域 %><br />
    <!-- モデルに登録しenumでもってきている、モデル名.カラム名複数形.keysで設定したenumを呼び出す -->
    <%= f.select :area, EndUser.areas.keys, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <% f.hidden_field :user_status, :value => true %><br />
  </div>

<div class="row" style="margin: 20px 0px 20px 0px;">
      <div class="col-xs-3 col-xs-offset-3">
    <%= f.submit "新規登録" %>
  </div>
</div>
<%= render "end_users/shared/links" %>
<% end %>
</div>
</div>


</div>