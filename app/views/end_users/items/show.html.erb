			<li>ビタミンK：　<%= @item.nutrients_vitamin_k %>　g</li>
			<li>ビタミンB1：　<%= @item.nutrients_vitamin_b1 %>　g</li>
			<li>ビタミンB2：　<%= @item.nutrients_vitamin_b2 %>　g</li>
			<li>ナイアシン：　<%= @item.nutrients_niacin %>　g</li>
