			<li>塩分： <%= @item.nutrients_salt %>　g</li>
			<li>ナトリウム：　<%= @item.nutrients_sodium %>　g</li>
			<li>カリウム：　<%= @item.nutrients_potassium %>　g</li>
			<li>カルシウム：　<%= @item.nutrients_calcium %>　g</li>
			<li>マグネシウム：　<%= @item.nutrients_magnesium %>　g</li>
			<li>リン：　<%= @item.nutrients_rin %>　g</li>
			<li>鉄：　<%= @item.nutrients_iron %>　g</li>
			<li>亜鉛：　<%= @item.nutrients_zinc %>　g</li>
			<li>銅：　<%= @item.nutrients_copper %>　g</li>
