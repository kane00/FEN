<div class="like-link" id="like-link-<%= item.id %>">
  <% if current_end_user.likes.find_by(item_id: item.id) %>
    <%= link_to end_users_unlike_path(item.id), method: :delete, remote: true do %>
        <div class = "far fa-heart unlike-btn"><%= item.likes.count %></div>
    <% end %>
  <% else %>
    <%= link_to end_users_like_path(item.id), method: :post, remote: true do %>
        <div class="far fa-heart like-btn"><%= item.likes.count %></div>
    <% end %>
  <% end %>
</div>